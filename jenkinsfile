pipeline {
  agent any

  stages {
    stage('Terraform Apply') {
      steps {
        // Execute Terraform commands in the ec2-user home directory
        dir('/home/ec2-user') {
          // Execute Terraform commands
          sh 'terraform init'
          sh 'terraform plan'
          sh 'terraform apply -auto-approve'
        }
      }
    }
  }
}
